                        td #{veiculo.km}
                        td.text-right
                          a.cl-btn.-cl-btn-grey(href='#' data-screen-target='agendar-veiculo') Agendar
                ._cl-datatable-info.cl-flex-row
                  ._cl-datatable-entries.cl-flex-row
                  ._cl-datatable-pagenation.text-right
          .cl-modal-actions.cl-flex-row
            .col-flex.-mobile-block
              a.cl-btn.-cl-btn-main.-mobile-block(href='#' data-screen-target='cadastrar-veiculo') Cadastrar Veículo
            .col-flex.-mobile-block.text-right
              a.-txt-main-color.cl-btn.-cl-btn-secondary(href='#' data-screen-target='cadastro') Sair
        //- Cadastrar Veículo (e Agendar)
        form.cl-screen(data-screen='cadastrar-veiculo')
          .cl-modal-header.cl-flex-row
            .col-flex
              h1.cl-title Cadastrar Veículo
            .col-flex.text-right.-txt-light-grey
              p.-user-title Olá John Doe
              p johndoe@connectlead.com.br | (11) 99877-1234
          .cl-modal-body
            .cl-modal-block
              h3.cl-title.mb-2 Informações do Veículo
              .cl-flex-row
                .input-field
                  span.label-placeholder Modelo
                  input(type='text' placeholder='Ex: Modelo 1.0')
