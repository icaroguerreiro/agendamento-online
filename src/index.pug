extends html/templates/_just_modal.pug
block head
  title Agendamento Online
  meta(name='description' content='Page Description')
block script
  script.

//- Content
block content
  .cl-modal.is-opened
    .cl-modal-dialog(role='document')
      .cl-modal-content.data-screen-parent
        //- Cadastro
        form.cl-screen.is-active(data-screen='cadastro')
          .cl-modal-header.cl-flex-row
            .col-flex
              h1.cl-title Cadastro
            .col-flex.text-right.-txt-light-grey
              p.-user-title Agendamento Online
          .cl-modal-body
            .cl-modal-block
              .cl-flex-row
                h2.-title-call.text-center Faça agora o seu agendamento em poucos passos
              .cl-flex-row
                h3.cl-title.mb-2 Dados de Cadastro
              .cl-flex-row
                .input-field
                  span.label-placeholder Nr. do Documento
                  input(name='cadastro-cpf-cnpj' type='text' placeholder='CPF ou CNPJ')
                .input-field
                  span.label-placeholder Nome
                  input(name='cadastro-nome' type='text' placeholder='Nome Completo')
              .cl-flex-row
                .input-field
                  span.label-placeholder Email
                  input(name='cadastro-email' type='text' placeholder='Email Válido')
                .input-field
                  span.label-placeholder Telefone
                  input(name='cadastro-cpf-cnpj' type='text' placeholder='(__) _____-____')
          .cl-modal-actions.cl-flex-row
            .col-flex.-mobile-block
              a.cl-btn.-cl-btn-main.-mobile-block(href='#' data-screen-target='meus-veiculos') Cadastrar
            .col-flex.-mobile-block.text-right
              a.cl-btn.-cl-btn-secondary(href='#' data-screen-target='acesso') Já possuo uma conta
        //- Acesso
        form.cl-screen(data-screen='acesso')
          .cl-modal-header.cl-flex-row
            .col-flex
              h1.cl-title Login
            .col-flex.text-right.-txt-light-grey
              p.-user-title Agendamento Online
          .cl-modal-body
            .cl-modal-block
              h3.cl-title.mb-2 Dados de Acesso
              .cl-flex-row
                .input-field
                  span.label-placeholder Usuário
                  input(name='cpf-cnpj-login' type='text' placeholder='CPF ou CNPJ')
                .input-field
                  span.label-placeholder Telefone
                  input(name='telefone-login' type='text' placeholder='(__) _____-____')
          .cl-modal-actions.cl-flex-row
            .col-flex.-mobile-block
              a.cl-btn.-cl-btn-main.-mobile-block(href='#' data-screen-target='meus-veiculos') Acessar
            .col-flex.-mobile-block.text-right
              a.cl-btn.-cl-btn-secondary(href='#' data-screen-target='cadastro') Criar Conta
        //- Agendar Veículo
        form.cl-screen(data-screen='agendar-veiculo')
          .cl-modal-header.cl-flex-row
            .col-flex
              h1.cl-title Novo Agendamento
            .col-flex.text-right.-txt-light-grey
              p.-user-title Olá John Doe
              p johndoe@connectlead.com.br | (11) 99877-1234
          .cl-modal-body
            .cl-modal-block
              h3.cl-title.mb-2 Informações do Veículo
              .cl-flex-row
                .input-field
                  span.label-placeholder Veículo
                  input(type='text' value='Mobi Way 1.4 - 2017/18 | OEN-1234 | 32.000 km' readonly)
            .cl-modal-block
              h3.cl-title.mb-2 Informações do Agendamento
              .cl-flex-row
                .input-field
                  span.label-placeholder Oficina
                  select._select2(name='agendamento-oficina')
                    option(value='' disabled selected) ...
                    option(value='Ipsum') Ipsum
                    option(value='Amet') Amet
                    option(value='Consectetur') Consectetur
                .input-field
                  span.label-placeholder Consultor
                  select._select2(name='agendamento-consultor')
                    option(value='' disabled selected) ...
                    option(value='Ipsum') Ipsum
                    option(value='Amet') Amet
                    option(value='Consectetur') Consectetur
                .input-field
                  span.label-placeholder Serviço
                  select._select2(name='agendamento-servico')
                    option(value='' disabled selected) ...
                    option(value='Ipsum') Ipsum
                    option(value='Amet') Amet
                    option(value='Consectetur') Consectetur
              .cl-flex-row
                .input-field
                  span.label-placeholder Dia do Agendamento
                  input._datepicker(name='agendamento-dia' type='text' placeholder='DD/MM/YYYY' data-date-start-date='+0d' data-date-end-date=false data-date-dates-disabled=[])
                .input-field
                  span.label-placeholder Horário do Agendamento
                  select._select2(name='agendamento-horario')
                    option(value='' disabled selected) ...
                    option(value='14_00') 14:00
                    option(value='16_00') 16:00
                    option(value='17_30') 17:30
            .cl-modal-block
              .input-field
                label.cl-flex-row.--flex-only-row
                  input.cl-checkbox(name='agendamento-acordo-de-regras' type='checkbox')
                  span Lorem ipsum dolor sit amet consectetur adipisicing elit. Labore possimus odio repudiandae incidunt? Error laborum, labore repellat repellendus commodi impedit.
          .cl-modal-actions.cl-flex-row
            .col-flex.-mobile-block
              a.cl-btn.-cl-btn-main.-mobile-block(href='#' data-screen-target='meus-veiculos') Agendar
              a.cl-btn.-cl-btn-grey.-mobile-block(href='#' data-screen-target='meus-veiculos') Cancelar
            .col-flex.-mobile-block.text-right
              a.-txt-main-color.cl-btn.-cl-btn-secondary(href='#' data-screen-target='cadastro') Sair
        //- Lista de Veículos
        form.cl-screen(data-screen='meus-veiculos')
