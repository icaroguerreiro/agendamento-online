                  span.label-placeholder Data da Compra
                  input._datepicker(name='data-compra' type='text' placeholder='DD/MM/YYYY' data-date-start-date=false data-date-end-date='+0d' data-date-dates-disabled=[])
            .cl-modal-block
              h3.cl-title.mb-2 Informações do Agendamento
              .cl-flex-row
