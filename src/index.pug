                  thead.-hide
                    tr
                      th Veículo
                      th Placa
                      th Quilometragem
                      th
                        span.-hide Ações
                  tbody
                    -
                      veiculos = [
                        {  nome : 'Mobi Way 1.4 (2017/18)',
